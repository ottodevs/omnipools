# Flow Network Configuration
# Set to 'local', 'testnet', or 'mainnet'
NEXT_PUBLIC_FLOW_NETWORK=local

# Flow Access Node URLs
NEXT_PUBLIC_FLOW_ACCESS_NODE_LOCAL=http://localhost:8888
NEXT_PUBLIC_FLOW_ACCESS_NODE_TESTNET=https://rest-testnet.onflow.org
NEXT_PUBLIC_FLOW_ACCESS_NODE_MAINNET=https://rest-mainnet.onflow.org

# Flow Contract Addresses
# Local Emulator
NEXT_PUBLIC_FLOW_CONTRACTS_LOCAL=0xf8d6e0586b0a20c7

# Testnet
NEXT_PUBLIC_FLOW_CONTRACTS_TESTNET=0xba1132bc08f82fe2

# Mainnet (update when deployed)
NEXT_PUBLIC_FLOW_CONTRACTS_MAINNET=

# WalletConnect Configuration
# Get your projectId from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Demo Organization Address
NEXT_PUBLIC_DEMO_ORG_ADDRESS=0xf8d6e0586b0a20c7

# Optional: FCL Configuration
NEXT_PUBLIC_FCL_LIMIT=1000

# Development
NODE_ENV=development
