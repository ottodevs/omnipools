{
  "name": "omnipools-app",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.20",
  "engines": {
    "node": "22.17.0"
  },
  "scripts": {
    "dev:next": "next dev --turbopack",
    "analyze": "ANALYZE=true bun run build:next",
    "build": "bun run generate:icons && next build --no-lint",
    "build:next": "bun run generate:icons && next build",
    "clean": "rm -rf .next .turbo node_modules",
    "clean:reinstall": "rm -rf node_modules .next bun.lock && bun install",
    "dev": "turbo dev:next",
    "fmt:all": "bun lint:fix && bun fmt:pkg && bun typecheck",
    "fmt:check": "eslint",
    "fmt:pkg": "bunx sort-package-json",
    "fmt:code": "eslint --fix",
    "generate:icons": "bun scripts/generate-icon-assets.ts",
    "start": "next start -p 3000",
    "lint": "next lint",
    "lint:fix": "eslint --fix",
    "flow:emulator": "flow emulator start --persist",
    "flow:deploy": "flow deploy",
    "flow:test": "flow scripts execute cadence/scripts/sc_test_simple.cdc",
    "flow:test:e2e": "flow scripts execute cadence/scripts/sc_test_end_to_end_simple.cdc",
    "flow:test:vault": "flow scripts execute cadence/scripts/sc_test_vault_operations.cdc",
    "flow:test:comprehensive": "flow scripts execute cadence/scripts/sc_test_comprehensive.cdc",
    "setup": "make setup",
    "test": "make test",
    "typecheck": "tsc --noEmit",
    "hackathon": "make hackathon",
    "unused": "knip",
    "docs": "echo 'ðŸ“š Documentation available in ./docs/'",
    "snapshot-ui": "./scripts/refresh-ui.sh",
    "judge": "concurrently -k -n EMU,APP -c cyan,magenta \"flow emulator start --verbose\" \"sh -c 'sleep 3 && ./scripts/demo.sh && bun run snapshot-ui && bun run dev'\"",
    "reset-run": "./scripts/reset-and-run.sh"
  },
  "dependencies": {
    "@onflow/react-sdk": "0.10.1",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "5.2.1",
    "@eslint-react/eslint-plugin": "1.52.5",
    "@eslint/eslintrc": "3.3.1",
    "@iconify/json": "2.2.374",
    "@iconify/utils": "3.0.1",
    "@prettier/plugin-xml": "3.4.2",
    "@tailwindcss/postcss": "4.1.12",
    "@types/node": "20.19.11",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "concurrently": "^9.2.0",
    "eslint": "9.33.0",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-better-tailwindcss": "3.7.4",
    "eslint-plugin-format": "1.0.1",
    "eslint-plugin-react-refresh": "0.4.20",
    "tailwindcss": "4.1.12",
    "turbo": "2.5.6",
    "typescript": "5.8.3"
  },
  "overrides": {},
  "patchedDependencies": {
    "@antfu/eslint-config@5.1.0": "config/patches/@antfu%2Feslint-config@5.1.0.patch"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "unrs-resolver"
  ]
}
